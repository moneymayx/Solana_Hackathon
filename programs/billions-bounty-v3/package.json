{
  "name": "billions-bounty-program-v3",
  "version": "0.3.0",
  "description": "Secure autonomous lottery system with comprehensive security fixes",
  "main": "ts/client.ts",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test -- --timeout 60000",
    "test:security": "anchor test -- tests/security_fixes.spec.ts",
    "test:integration": "anchor test -- tests/integration.spec.ts",
    "test:edge": "anchor test -- tests/edge_cases.spec.ts",
    "deploy:local": "anchor deploy --provider.cluster localnet",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet-beta",
    "idl": "anchor idl init --filepath target/idl/billions_bounty_v3.json"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@noble/ed25519": "^1.7.3",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^24.9.2",
    "chai": "^4.3.0",
    "mocha": "^9.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.0"
  },
  "keywords": [
    "solana",
    "lottery",
    "defi",
    "anchor",
    "rust",
    "blockchain",
    "security"
  ],
  "author": "Billions Bounty Team",
  "license": "MIT"
}

