# ==============================================================================
# Billions Bounty - Environment Configuration Template
# ==============================================================================
# Copy this file to the project root as .env and fill in your actual values
# 
# NOTE: This template does NOT contain sensitive data. Fill in your own values.
# ==============================================================================

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

DATABASE_URL=postgresql+asyncpg://user:password@host:port/database?ssl=require

# ==============================================================================
# SOLANA NETWORK CONFIGURATION
# ==============================================================================

SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com

# ==============================================================================
# V1 SMART CONTRACT CONFIGURATION
# ==============================================================================

LOTTERY_PROGRAM_ID=your_v1_program_id_here

# ==============================================================================
# V2 SMART CONTRACT CONFIGURATION
# ==============================================================================

USE_CONTRACT_V2=false
LOTTERY_PROGRAM_ID_V2=your_v2_program_id_here
V2_GLOBAL_PDA=your_v2_global_pda_here
V2_BOUNTY_1_PDA=your_v2_bounty_1_pda_here
V2_USDC_MINT=your_usdc_mint_address_here
V2_BOUNTY_POOL_WALLET=your_bounty_pool_wallet_here
V2_OPERATIONAL_WALLET=your_operational_wallet_here
V2_BUYBACK_WALLET=your_buyback_wallet_here
V2_STAKING_WALLET=your_staking_wallet_here

# ==============================================================================
# WALLET ADDRESSES (V1 Configuration)
# ==============================================================================

JACKPOT_WALLET_ADDRESS=your_jackpot_wallet_here
BUYBACK_WALLET_ADDRESS=your_buyback_wallet_here
OPERATIONAL_WALLET_ADDRESS=your_operational_wallet_here
STAKING_WALLET_ADDRESS=your_staking_wallet_here

# ==============================================================================
# TOKEN CONFIGURATION
# ==============================================================================

USDC_MINT=your_usdc_mint_address_here
TOKEN_100BS_MINT=your_100bs_token_mint_here

# ==============================================================================
# STAKING CONFIGURATION
# ==============================================================================

STAKING_PROGRAM_ID=your_staking_program_id_here

# ==============================================================================
# BUYBACK CONFIGURATION
# ==============================================================================

BUYBACK_THRESHOLD=50.00

# ==============================================================================
# AI DECISION SYSTEM
# ==============================================================================

AI_DECISION_ENABLED=true
AI_DECISION_KEY_PATH=config/keys/ai_decision_key.pem

# ==============================================================================
# BACKEND AUTHORITY
# ==============================================================================

BACKEND_AUTHORITY_KEY_PATH=config/keys/backend_authority_key.pem

# ==============================================================================
# AI SERVICE CONFIGURATION
# ==============================================================================

ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==============================================================================
# PAYMENT CONFIGURATION
# ==============================================================================

PAYMENT_MODE=mock

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

ENABLE_RATE_LIMITING=true
ENABLE_GDPR_COMPLIANCE=true
ENCRYPTION_MASTER_KEY=generate_a_secure_random_key_here

# ==============================================================================
# CONTEXT WINDOW ENHANCEMENT
# ==============================================================================

ENABLE_ENHANCED_CONTEXT=true

# ==============================================================================
# EMAIL CONFIGURATION (Optional)
# ==============================================================================

EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# ==============================================================================
# REDIS / CELERY CONFIGURATION
# ==============================================================================

REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# FRONTEND URL (Production)
# ==============================================================================

PRODUCTION_FRONTEND_URL=https://yourdomain.com

# ==============================================================================
