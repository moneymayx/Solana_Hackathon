# Environment Configuration Template
# Copy this file to config/env/.env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///billions.db

# Solana Network Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# AI Decision System
AI_DECISION_ENABLED=true
AI_DECISION_KEY_PATH=config/keys/ai_decision_key.pem

# Backend Authority
BACKEND_AUTHORITY_KEY_PATH=config/keys/backend_authority_key.pem

# Email Configuration (if needed)
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Security Settings
ENABLE_RATE_LIMITING=true
ENABLE_GDPR_COMPLIANCE=true
